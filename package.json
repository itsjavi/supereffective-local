{
  "name": "supereffective-lite",
  "version": "1.1.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist/* && vite build",
    "build:production": "NODE_ENV=production && vite build && rm -rf _site && mkdir -p _site && mv ./dist/* ./_site",
    "chlog": "bun make:changelog",
    "codegen": "bun codegen:svg",
    "codegen:svg": "rm -rf src/lib/icons && svgr --no-prettier --out-dir='src/lib/icons' --typescript --icon=24 --ext=tsx ./src/assets/icons",
    "dev": "vite --port=4930 --host",
    "format": "bun lint:fix",
    "lint": "tsc --noEmit && bun lint-prettier && bun lint-biome",
    "lint-biome": "biome lint . --max-diagnostics 50",
    "lint-biome-ci": "biome ci . --max-diagnostics 50",
    "lint-prettier": "prettier --check \"src/**/*.{md,json,css,scss}\"",
    "lint:ci": "bun lint-prettier && bun lint-biome-ci",
    "lint:fix": "bun lint:fix-prettier && bun lint:fix-package-json && bun lint:fix-biome",
    "lint:fix-biome": "biome check --max-diagnostics 50 --apply .",
    "lint:fix-package-json": "sort-package-json",
    "lint:fix-prettier": "prettier  --log-level warn --write \"src/**/*.{md,json,css,scss}\"",
    "make": "bun make:component",
    "make:changelog": "bun src/scripts/make-changelog-entry.ts",
    "make:component": "bun src/scripts/make-component.ts",
    "make:data": "bun make:optimized-data",
    "make:images": "bun make:optimized-images",
    "make:optimized-data": "bun src/scripts/make-optimized-data.ts && bun lint:fix-prettier",
    "make:optimized-images": "bun src/scripts/make-optimized-images.ts",
    "precommit": "CI=true bun test && CI=true bun lint",
    "prepare": "husky install",
    "preview": "bun run start",
    "start": "vite preview --host",
    "test": "bun test --env=jsdom",
    "test:coverage": "bun test --coverage && open coverage/index.html",
    "version:bump": "bun x changelogen --bump --release",
    "version:publish": "bun run version:release",
    "version:release": "git push && git push --tags"
  },
  "lint-staged": {
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@tanstack/react-query": "^5.17.10",
    "clsx": "^2.1.0",
    "open-props": "^1.6.17",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.1",
    "@supeffective/dataset": "^2.1.3",
    "@svgr/cli": "^8.1.0",
    "@types/express": "^4.17.21",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "changelogen": "^0.5.5",
    "cssnano": "^6.0.3",
    "express": "^4.18.2",
    "glob": "^10.3.10",
    "html-minifier-terser": "^7.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.33",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "postcss-import": "^16.0.0",
    "postcss-import-ext-glob": "^2.1.1",
    "postcss-jit-props": "^1.0.14",
    "prettier": "^3.2.1",
    "puppeteer": "^21.7.0",
    "rollup": "^4.9.5",
    "sass": "^1.69.7",
    "sharp": "^0.33.2",
    "sort-package-json": "^2.6.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-html-prerender": "^0.2.0",
    "vite-plugin-pwa": "^0.17.4"
  }
}
